{
  "name": "tsdown-template",
  "version": "0.1.0",
  "description": "基于 tsdown 的 TypeScript 项目构建模板",
  "author": "CaoMeiYouRen",
  "private": true,
  "license": "MIT",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.mts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "lint": "cross-env NODE_ENV=production eslint src --fix --ext .ts,.js,.cjs,.mjs",
    "prebuild": "rimraf dist",
    "build": "cross-env NODE_ENV=production tsdown",
    "dev": "cross-env NODE_ENV=development tsx watch src/index.ts",
    "dev:tsup": "cross-env NODE_ENV=development tsdown --watch",
    "start": "node ./dist/index",
    "start:tsx": "cross-env NODE_ENV=production tsx src/index.ts",
    "release": "semantic-release",
    "commit": "cz",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/debug": "^4.1.12",
    "@types/node": "^24.6.0",
    "commitizen": "^4.3.1",
    "conventional-changelog-cli": "^5.0.0",
    "conventional-changelog-cmyr-config": "^3.0.0",
    "cross-env": "^10.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "cz-conventional-changelog-cmyr": "^2.0.0",
    "debug": "^4.4.3",
    "eslint": "^9.36.0",
    "eslint-config-cmyr": "2.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "rimraf": "^6.0.1",
    "semantic-release": "^23.0.6",
    "tsdown": "^0.15.6",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog-cmyr"
    }
  },
  "changelog": {
    "language": "zh"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint",
      "git add"
    ]
  },
  "keywords": [
    "tsdown",
    "typescript"
  ],
  "homepage": "https://github.com/CaoMeiYouRen/tsdown-template#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CaoMeiYouRen/tsdown-template.git"
  },
  "bugs": {
    "url": "https://github.com/CaoMeiYouRen/tsdown-template/issues"
  },
  "dependencies": {
    "tslib": "^2.8.1"
  },
  "pnpm": {
    "overrides": {
      "compare-func": "^2.0.0",
      "katex": "^0.16.21",
      "esbuild": "^0.25.0",
      "@octokit/plugin-paginate-rest": "^11.4.1",
      "@octokit/request": "^9.2.1",
      "@octokit/request-error": "^5.1.1",
      "brace-expansion": "^2.0.2",
      "tmp": "^0.2.4"
    }
  },
  "type": "module"
}
